/**app.wxss**/
page {
  background-color: #fbf9fe;
  height: 100%;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 0;
  box-sizing: border-box;
} 
.list{
  display:block;
  width:100%;
}
.item{
  display: block;
  background:#ffffff;
  position: relative;
  padding-top: 26rpx;
  padding-bottom: 26rpx;
  width:100%;
}
.item .line{
  position: absolute;
  bottom: 0;
  width: 100%;
  background-color: #F0F0F0;
  height:2rpx;
  right:0;
}
.t-red{
  color: #E60B0B;
}
.t-green{
  color:#00CD66;
}
.b-white{
  background-color:#ffffff;
}